<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.miller.muckup">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".passwordRecovery.view.PasswordRecovery"></activity>
        <activity android:name=".store.activities.ManagerBuy" />
        <activity android:name=".menuPrincipal.activities.items.DepartamentManager" />
        <activity android:name=".menuPrincipal.activities.items.MyBuys" />
        <activity android:name=".menuPrincipal.activities.items.MyCart" />
        <activity
            android:name=".store.buy.view.BuyActivity"
            android:label="@string/title_activity_buy"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar" />
        <activity
            android:name=".store.activities.Store"
            android:label="@string/title_activity_store" />
        <activity android:name=".medicine.activities.Medicine" />
        <activity
            android:name=".menuPrincipal.activities.MenuPrincipal"
            android:label="@string/title_activity_menu_principal" />
        <activity android:name=".register.activities.Register" />
        <activity android:name=".login.views.Login" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>