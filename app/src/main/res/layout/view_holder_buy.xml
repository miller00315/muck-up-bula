<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:id="@+id/layout_product"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_product"
        android:src="@drawable/ic_pharma_seeklogo"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/name_product"
        android:padding="5dp"
        android:textColor="#000000"
        android:layout_toEndOf="@id/image_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/price_product"
        android:padding="5dp"
        android:layout_below="@id/name_product"
        android:layout_toEndOf="@id/image_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/store_product"
        android:padding="5dp"
        android:layout_below="@id/price_product"
        android:layout_toEndOf="@id/image_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_below="@id/store_product"
        android:layout_width="match_parent"
        android:background="#f3f3f3"
        android:layout_toEndOf="@id/image_product"
        android:layout_height="1dp"/>

</RelativeLayout>